  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.2/css/all.css">
  
  <link rel="stylesheet" href="main.css" />
  <title>Todolist</title>
</head>
<header>
  <nav class="navbar navbar-expand-custom navbar-mainbg ">

    <div class="collapse navbar-collapse " id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">

        <li class="nav-item">
          <a class="nav-link" href="/"><i class="far fa-calendar-alt"></i>Today</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/work"><i class="far fa-clone"></i>Work</a>
        </li>


      </ul>
    </div>
  </nav>
</header>

<body>
  <main>  <div class="box" id="heading">
    <h1>
      <%= currentdate  %>
    </h1>
  </div>
  <div class="box">
     

      <% for( var i = 0; i < task.length; i++){ %>
        <div class="item">
          <input type="checkbox">
        <p>
          <%= task[i] %>
        </p>
        <form action="/delete" method="post">
          <button class="delete" name="deleteItem" type="submit" value="<%=i%>">&#10060</button>
        </form>
    
      </div>
        <% } %>
      
      
        <form class="item" action="/" method="post">
          <input type="text" name="newItem" placeholder="New Item" autocomplete="off" />
          <button type="submit" name="list" value=Thursday, July 27 >+</button>
        </form>
  </div>
  </main>
